package jom;
import java.util.Scanner;
class COMPLEX{
	int a;
	int b;
	int c;
	int d;
	
	void accept() {
		Scanner sc=new Scanner(System.in);
		System.out.println("enter the number");
		a=sc.nextInt();
		System.out.println("enter the number");
		b=sc.nextInt();
		System.out.println("enter the number");
		c=sc.nextInt();
		System.out.println("enter the number");
		d=sc.nextInt();
	}
	void display() {
		int complexno=a+b;
				int img=c+d;
		System.out.println("the sum of the two complex number="+complexno+"+" +img+"i");
	}
	
}

public class Tom {

	public static void main(String[] args) {
	COMPLEX c =new COMPLEX();
		c.accept();
		c.display();
		
		

	}

}
